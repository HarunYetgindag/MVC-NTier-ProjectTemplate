@using MVC_TemplateProject.Entities.WebLayerViewModels
@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Register</h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(true)

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
                        @Html.ValidationMessageFor(x => x.Username)
                    </div>
                    <br />

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-Mail" })
                        @Html.ValidationMessageFor(x => x.Email)
                    </div><br />
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                        @Html.ValidationMessageFor(x => x.Password)
                    </div><br />

                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Password Confirm", type = "password" })
                        @Html.ValidationMessageFor(x => x.RePassword)
                    </div>
                    <br />

                    <div class="form-group center-block">
                        <button type="submit" class="btn btn-danger login-button">Register</button>
                    </div>

                </div>
            </div>

        </div>
    </section>
}


